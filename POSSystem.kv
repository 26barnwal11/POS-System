<WindowManager>:
    SigninWindow:
    OperatorWindow:
<FlatButton@ButtonBehavior+Label>:
    font_size: 14
    background_normal: ""
    background_color: (.06,.45,.45,1)
<SigninWindow>:
    id: main_win
    name: "signin"
    orientation: "vertical"
    spacing : 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        padding_top: 10
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Access Control"
            bold: True
            size_hint_x: .9
        FlatButton:
            text: "x"
            size_hint_x: .1
    BoxLayout:
        orientation: "vertical"
        padding: main_win.space_x, 10
        spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: username_field
                hint_text: "Username"
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus= True
            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 20
        Button:
            size_hint_y: None
            height: 40
            text: "Sign In"
            background_color: (.06,.45,.45,1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id:sp2
            
<OperatorWindow>:
    id: main_win
    name: "operator"
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Mega Multimedia Soundz"
            size_hint_x: .9
            bold: True
            color: (1,1,1,1)
        FlatButton:
            id: loggedin_user
            size_hint_x: .1
            text: 'hkb'
    
    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        FlatButton:
            size_hint_x: .4
            text: "Current Item"
            background_normal: ""
            background_color: (.06,.32,.32,1)
        Button:
            id: cur_product
            text: "Default Product"
            background_normal: ""
            background_color: (.06,.4,.4,1)
        Button:
            id: cur_price
            size_hint_x: .2
            text: "0.00"
            background_normal: ""
            background_color: (.06,.65,.65,1)
    BoxLayout:
        padding: 5
        BoxLayout:            
            id: product_details
            orientation: "vertical"
            size_hint_x: .8
            spacing: 10
            padding: 5
            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color: 
                        rgba: (.06,.45,.45,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                FlatButton:
                    text: "Qty"
                    size_hint_x: .1
                FlatButton:
                    text: "Product Code"
                    size_hint_x: .3
                FlatButton:
                    text: "Disc"
                    size_hint_x: .1
                FlatButton:
                    text: "Disc &"
                    size_hint_x: .1
                FlatButton:
                    text: "VAT"
                    size_hint_x: .1
                FlatButton:
                    text: "Price"
                    size_hint_x: .1
                FlatButton:
                    text: "Product Total"
                    size_hint_x: .2
            BoxLayout:
                id: products_input
                spacing: 5
                size_hint_y: None
                height: 30
                TextInput:
                    id: qty_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: code_inp.focus= True
                TextInput:
                    id: code_inp
                    size_hint_x: .3
                    multiline: False
                    on_text_validate: disc_inp.focus= True
                TextInput:
                    id: disc_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: disc_perc_inp.focus= True
                TextInput:
                    id: disc_perc_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: val_inp.focus= True
                TextInput:
                    id: val_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: price_inp.focus= True
                TextInput:
                    id: price_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: root.update_purchases()
                TextInput:
                    id: total_inp
                    size_hint_x: .2
                    active: False
            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (.06,.45,.45,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: "Code"
                        size_hint_x: .2
                    Label:
                        text: "Product Name"
                        size_hint_x: .3
                    Label:
                        text: "Qty"
                        size_hint_x: .1
                    Label:
                        text: "Disc"
                        size_hint_x: .1
                    Label:
                        text: "Price"
                        size_hint_x: .1
                    Label:
                        text: "Product Total"
                        size_hint_x: .2
                    
                GridLayout:                
                    id: products
                    cols: 1

        BoxLayout:            
            id: preview
            orientation: "vertical"
            size_hint_x: .2            
            padding: 5

            TextInput:
                id: receipt_preview
                readonly: True
                padding: 10
                text: "Domlur Branch,\nBengaluru\nReceipt No. \nDate: \n\n"                

    BoxLayout:
        id: footer
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Himanshu's workmanship"

